#include<iostream>
using namespace std;
int main(){
    int n,i,j;
    int pascal[20][20];
    cout<<"enter no of rows n: ";
    cin>>n;
    for(i=0;i<=n;i++){
        for(j=0;j<=i;j++){
            if(j==0||j==i)
            pascal[i][j]=1;
            else{
                pascal[i][j]=pascal[i-1][j]+pascal[i-1][j-1];
            }
        }
    }cout<<"pascal triangle";
    for(i=0;i<=n;i++){
        for(j=0;j<=i;j++){
            cout<<pascal[i][j]<<" ";
        }
        cout<<endl;
    }
        return 0;
}